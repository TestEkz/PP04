<Window x:Class="PP04.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PP04"
        mc:Ignorable="d"
        Title="Auth" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"></TextBlock>
            <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5"></TextBlock>
            <TextBox Width="150" Name="LoginBox" FontSize="16" Margin="0,0,0,5"></TextBox>
            <TextBlock Text="Пароль:"  FontSize="16" Margin="0,0,0,5"></TextBlock>
            <PasswordBox Width="150" Name="PassBox" FontSize="16" Margin="0,0,0,15"></PasswordBox>
            <StackPanel>
                <Button Content="Войти" Name="BtnAuth" Click="BtnAuth_Click" Width="80" Height="25" FontSize="14" Background="Coral"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
